      "module": "CommonJS",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
